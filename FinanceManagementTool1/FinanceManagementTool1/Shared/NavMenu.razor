<RadzenLayout style="position:relative">
    <RadzenHeader class="rz-background-color-info-light rz-pt-4 rz-pl-4 p-1">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Style="text-align:center">
			@* <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" /> *@
            <h5>Finance Pro</h5>
		</RadzenStack>
	</RadzenHeader>

    <RadzenSidebar Responsive="false" style="position: relative" class="rz-background-color-base-300">
        <RadzenPanelMenu class="rz-background-color-base-300">
			@* <RadzenPanelMenuItem Text="Home" Icon="home" /> *@
			<AuthorizeView>
				<Authorized>
					<div class="nav-item px-3">
                        <NavLink class="nav-link rz-color-primary rz-ripple rz-text-align-center rz-p-5" href="currencyexchange">
							<RadzenIcon Icon="cached" class="rz-color-base-900 rz-mr-2" aria-hidden="true" /> <span class="rz-color-base-900">Currency exchange</span>
						</NavLink>
					</div>
					<div class="nav-item px-3">
                        <NavLink class="nav-link rz-color-primary rz-ripple rz-text-align-center rz-p-5" href="dashboard">
							<RadzenIcon Icon="dashboard" class="rz-color-base-900 rz-mr-2" aria-hidden="true" /> <span class="rz-color-base-900">Dashboard</span>
						</NavLink>
					</div>
					<div class="nav-item px-3">
                        <NavLink class="nav-link rz-color-primary rz-ripple rz-text-align-center rz-p-5" href="standarduser">
							<RadzenIcon Icon="settings" class="rz-color-base-900 rz-mr-2" aria-hidden="true" /> <span class="rz-color-base-900">Settings</span>
						</NavLink>
					</div>
				</Authorized>
			</AuthorizeView>
			@*  <RadzenPanelMenuItem Text="Users" Icon="account_box" /> *@
		</RadzenPanelMenu>
	</RadzenSidebar>
</RadzenLayout>

<RadzenFooter Style="text-align:center" class="rz-background-color-info-light rz-color-white">
	© 2024 - Finance Pro
</RadzenFooter>


